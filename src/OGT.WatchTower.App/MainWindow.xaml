<Window x:Class="OGT.WatchTower.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="OGT WatchTower v2" Height="700" Width="1100"
        WindowStartupLocation="CenterScreen"
        Background="#121212"
        Foreground="White">
    
    <Window.Resources>
        
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border Grid.Column="0" Background="#1E1E1E">
            <StackPanel>
                <TextBlock Text="OGT WatchTower" FontSize="20" FontWeight="Bold" Foreground="#00D4FF" Margin="20,20,20,40"/>
                
                <Button Content="Dashboard" Style="{StaticResource NavButton}" Click="Nav_Dashboard_Click"/>
                <Button Content="Live Monitoring" Style="{StaticResource NavButton}" Click="Nav_Monitoring_Click"/>
                <Button Content="Logs" Style="{StaticResource NavButton}" Click="Nav_Logs_Click"/>
                <Button Content="Forensics" Style="{StaticResource NavButton}" Click="Nav_Forensics_Click"/>
                <Button Content="Intelligence" Style="{StaticResource NavButton}" Click="Nav_Intelligence_Click"/>
                <Button Content="Settings" Style="{StaticResource NavButton}" Click="Nav_Settings_Click"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Background="#1A1A1A" BorderBrush="#333333" BorderThickness="0,0,0,1">
                <Grid>
                    <TextBlock x:Name="PageTitle" Text="Dashboard" VerticalAlignment="Center" Margin="20,0" FontSize="18" FontWeight="SemiBold"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,20,0">
                        <Button Content="STATUS REPORT" 
                                Background="#333333" Foreground="White" BorderThickness="0"
                                Padding="15,0" Margin="0,0,15,0" Height="32"
                                FontSize="12" FontWeight="SemiBold"
                                Click="Report_Click">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="16" Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#444444"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter Property="Background" Value="#222222"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                        <Button x:Name="ProtectionBtn" Content="ACTIVE" Style="{StaticResource ProtectionButtonStyle}" Click="Protection_Toggle_Click"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Content Area -->
            <ContentControl x:Name="MainContent" Grid.Row="1" Margin="20"/>
        </Grid>
    </Grid>
</Window>
